<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComputationActivity">

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/host_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Enter Host"
            android:text="10.1.199.38" />

        <EditText
            android:id="@+id/port_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Port"
            android:inputType="numberDecimal"
            android:text="50051" />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="Data URL:"
            android:textSize="16sp"
            android:layout_width="0dp" />
        <Spinner
            android:layout_weight="2"
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spingarr" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="Loacl Epoch:"
            android:textSize="16sp"
            android:layout_width="0dp" />
        <EditText
            android:id="@+id/epoch"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="5"
            />

    </LinearLayout>


    <Button

        android:layout_marginTop="20dp"
        android:id="@+id/train_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Training"
        android:text="Local Training" />

    <TextView

        android:layout_marginTop="10dp"
        android:id="@+id/server_response_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:textSize="16sp" />

</LinearLayout>
