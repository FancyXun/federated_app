<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComputationActivity">

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:scrollbars="vertical"
            android:drawableStart="@drawable/file"
            android:text="  数据集  "
            android:textSize="18sp"
            android:layout_width="0dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <TextView-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:scrollbars="vertical"-->
<!--            android:text=""-->
<!--            android:textSize="16sp"-->
<!--            android:layout_width="0dp" />-->
        <Spinner
            android:layout_weight="2"
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spingarr" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="  模型库  "
            android:textColor="#000"
            android:drawableStart="@drawable/model"
            android:textSize="18sp"
            android:layout_width="0dp" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--        <TextView-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:scrollbars="vertical"-->
<!--            android:text=""-->
<!--            android:textSize="16sp"-->
<!--            android:layout_width="0dp" />-->
        <Spinner
            android:layout_weight="2"
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/model" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="  类型  "
            android:textColor="#000"
            android:drawableStart="@drawable/action"
            android:textSize="18sp"
            android:layout_width="0dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--        <TextView-->
        <!--            android:layout_weight="1"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:scrollbars="vertical"-->
        <!--            android:text=""-->
        <!--            android:textSize="16sp"-->
        <!--            android:layout_width="0dp" />-->
        <Spinner
            android:layout_weight="2"
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/action" />

    </LinearLayout>

    <Button
        android:background="@drawable/bt_shape"
        android:layout_marginTop="30dp"
        android:id="@+id/train_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Training"
        android:text="开始" />


    <TextView

        android:layout_marginTop="10dp"
        android:id="@+id/server_response_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:textSize="16sp" />



</LinearLayout>
